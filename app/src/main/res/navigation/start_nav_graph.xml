<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_nav_graph"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="gent.zeus.tappb.ui.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/nav_stock"
        android:name="gent.zeus.tappb.ui.StockFragment"
        android:label="StockFragment"
        tools:layout="@layout/fragment_stock"/>
    <fragment
        android:id="@+id/nav_money"
        android:name="gent.zeus.tappb.ui.MoneyFragment"
        android:label="MoneyFragment"
        tools:layout="@layout/fragment_money"/>
    <fragment
        android:id="@+id/nav_account"
        android:name="gent.zeus.tappb.ui.AccountFragment"
        android:label="AccountFragment"
        tools:layout="@layout/fragment_account">
        <action
            android:id="@+id/action_nav_account_to_nav_favorite_item"
            app:destination="@id/nav_favorite_item" />
    </fragment>
    <fragment
        android:id="@+id/nav_favorite_item"
        android:name="gent.zeus.tappb.ui.FavoriteItemFragment"
        android:label="FavoriteItemFragment"
        tools:layout="@layout/fragment_stock"/>

</navigation>